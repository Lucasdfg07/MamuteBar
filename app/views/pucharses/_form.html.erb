<section class="new_sale text-center">
    <%= form_for pucharse do |f| %>
      <section class="card">
        <section class="card-header">
          Dados da compra no mercado
        </section>

        <section class="card-body">
          <section class="form-group">
            Categoria* <br />
            <%= f.collection_select :category_id, Category.order('name ASC'), :id, :name, {include_blank: 'Selecione uma Categoria'}, {class: 'form-control'} %>
          </section>

          <section class="row">
            <section class="col-6 form-group">
              Nome* <br />
              <%= f.text_field :name, class: 'form-control', required: true %>
            </section>

            <section class="col-6 form-group">
              Pre√ßo total da compra* <br />
              <%= f.number_field :price, step: :any, class: 'form-control', placeholder: 'R$', required: true %>
            </section>
          </section>

          <%= f.submit 'Salvar', class: 'btn btn-primary save' %>
        </section>
      </section>
    <% end %>
</section>
